{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
